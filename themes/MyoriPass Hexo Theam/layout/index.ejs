<body>
<main class="container mx-auto p-6 md:p-12">
  <%- partial('_partial/top') %>
  <section>
    <div class="bg-white p-4">
      <div class="border-b-2 pb-2 mb-4 animate__animated animate__fadeIn">
        <h1 class="text-2xl font-bold  pt-16">
          最新更新
        </h1>
      </div>
      <ul class="space-y-4">
        <% page.posts.each(function (post) { %>
        <a class="p-4" href="<%- url_for(post.path) %>">
          <li class="border rounded-lg p-4 flex justify-between items-center hover:border-sky-500 animate__animated animate__fadeInUp">
            <div>
              <h2 class="text-lg font-semibold">
                <%= post.title %>
              </h2>
              <p class="text-sm text-gray-500">
                <%= date(post.date, "YYYY-MM-DD") %>
              </p>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 text-gray-400">
              <path d="m9 18 6-6-6-6"></path>
            </svg>
          </li>
        </a>
        <% }) %>
      </ul>
    </div>
    </section>
</main>
</body>